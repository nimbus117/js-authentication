<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Pasport Example</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css">
  </head>
  <body>
    <nav>
      <ul>
        <% if (user) {%>
          <li><a href="/auth/logout">Logout</a></li>
        <% } else {%>
          <li><a href="/auth/login">Login</a></li>
        <% }%>
        <li><a href="/">Home</a></li>
